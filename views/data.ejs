<%- include("_header") -%>

<h1>List of users (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>City</th>
        <th>Country</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/create">Add</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const user of model) { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.city %></td>
          <td><%= user.country %></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/edit/<%= user.ID %>">Edit</a>
            <a class="btn btn-sm btn-danger" href="/delete/<%= user.ID %>">Delete</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("_footer") -%>
